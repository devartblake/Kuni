{
    "parser"    : "babel-eslint",
    "extends"   : [
        "standard",
        "standard-react"
    ],
    "ecmaFeatures"  : {
        "jsx" : true
    },
    "plugins"   : [
        "flowtype",
        "react"
    ],
    "env"       : {
        "browser"  : true
    },
    "globals"   : {
        "Action"    : false,
        "__DEV__"   : false,
        "__PROD__"  : false,
        "__DEBUG__" : false,
        "__DEBUG_NEW_WINDOW__"  :   false,
        "__BASENAME__"  : false
    },
    "rules"     : {
        "semi"  : [2, "never"],
        "max-len"   : [2, 120, 2],
        "flowtype/define-flow-type"    :  1,
        "flowtype/use-flow-type"   : 1,
        "camelcase"     :   0,
    }
}
